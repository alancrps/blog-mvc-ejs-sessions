<table class="table table-striped table table-bordered mt-5">
    <thead>
        <tr>
            <th class="text-center" scope="col">
                Id
            </th>
            <th class="text-center" scope="col">
                Titulo
            </th>
            <th class="text-center" scope="col">
                Contenido
            </th>
            <th class="text-center" scope="col">
                Creado
            </th>
            <th class="text-center" scope="col">
                Actualizado
            </th>
            <th class="text-center" scope="col">
                Editar
            </th>
            <th class="text-center" scope="col">
                Eliminar
            </th>
            <th class="text-center"scope="col">
                Recuperar
            </th>
        </tr>
    </thead>
    <tbody>
        <% noticias.forEach(noticia =>{ %>
            <tr class="">
                <th scope="row"><%= noticia.id %></th>
                <td><%= noticia.titulo %></td>
                <td><%= noticia.contenido %></td>
                <td><%= noticia.create_at %></td>
                <td class="text-center"><%= noticia.updated_at %></td>
                <td class="text-center"><a href="/noticias/editar/<%= noticia.id %>"><i class="fs-4 bi bi-pencil-fill"></i></a></td>
                <td class="text-center"><a href="/noticias/eliminar/<%= noticia.id %>"><i class="fs-4 bi bi-trash3"></i></a></td>
                <td class="text-center"><a href="/noticias/recuperar/<%= noticia.id %>">
                <% if (noticia.delete_at) { %>
                    <i class="fs-4 bi bi-arrow-repeat"></i>
                <% } %>
                </a></td>
                
            </tr>
        <% }); %>
    </tbody>
</table>