<div class="mt-4" id="formulario-crear-noticia">
	<form name="noticia" action="/noticias/editar/<%= noticia.id %>" method="POST">
		<div class="mb-3">
			<label for="titulo" class="form-label">Titulo</label>
			<input type="text" class="form-control" name="titulo" value="<%= noticia.titulo%>"/>
		</div>
		<div class="mb-3">
			<label for="imageURL" class="form-label">URL:</label>
			<input type="text" class="form-control" name="imageURL" value="<%= noticia.imageURL %>"/>
		</div>
		<div class="mb-3">
			<label for="contenido" class="form-label">Descripci√≥n</label>
			<textarea
				name="contenido"
				class="form-control"
				rows="5"
				placeholder="Ingrese el contenido..."
			><%= noticia.contenido%></textarea>
		</div>
		<button type="submit" class="btn btn-primary">Guardar</button>
	</form>
</div>
