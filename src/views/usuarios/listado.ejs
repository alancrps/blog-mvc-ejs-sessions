<div class="container my-5">
	<div
		class="row px-5 pb-0 py-lg-5 align-items-center rounded-3 border shadow-lg"
	>
		<div class="col-md-6">
			<h2 class="fw-bold lh-1 text-body-emphasis mb-3"><i class="bi bi-person-lines-fill"></i> Listado de Usuarios</h2>

		</div>
        <!-- <div class="col-md-6 text-end">
            <button class="btn btn-primary">Agregar</button>
        </div> -->
		<hr class="hr" />
        <table class="table table-striped table-bordered mt-3">
            <thead>
                <tr>
                    <th class="text-center" scope="col">Email</th>
                    <th class="text-center" scope="col">Nombre</th>
                    <th class="text-center" scope="col">Apellido</th>
                    <th class="text-center" scope="col">Editar</th>                    
                </tr>
            </thead>
            <tbody class="table-group-divider">
                <tr>
                    <% usuarios.forEach(usuario =>{ %>
                        <tr class="">
                            <th class="text-center align-middle" scope="row"><%= usuario.email %></th>
                            <td class="text-center align-middle"><%= usuario.nombre %></td>
                            <td class="text-center align-middle"><%= usuario.apellido %></td>
                            <td class="text-center align-middle">
                                <a
                                    role="button"
                                    class="btn btn-success"
                                    href="/usuarios/editar/<%= usuario.id %>"
                                    ><i class="fs-5 bi bi-pencil-fill"></i
                                ></a>
                            </td>
                        </tr>
                        
                    <% }); %>
                </tr>
            </tbody>
        </table>
	</div>
</div>